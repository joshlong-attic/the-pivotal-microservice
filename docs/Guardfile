

require 'asciidoctor'
require 'erb'

guard 'shell' do
	watch(/.*\.adoc$/) {|m|



		Asciidoctor.render_file(  'src/main/asciidoc/blog.adoc' ,
			:in_place => true, \
			:safe => Asciidoctor::SafeMode::UNSAFE, \
			:attributes=> { \
				'source-highlighter' => 'prettify', \
				'icons' => 'font', \
				'linkcss'=> 'true', \
				'copycss' => 'true', \
				'doctype' => 'book'})

		Asciidoctor.render_file( m[0],
			:in_place => true, \
			:safe => Asciidoctor::SafeMode::UNSAFE, \
			:attributes=> { \
				'source-highlighter' => 'prettify', \
				'icons' => 'font', \
				'linkcss'=> 'true', \
				'copycss' => 'true', \
				'doctype' => 'book'})
	}
end
